<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="150dp">
           <ImageView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:scaleType="centerCrop"
               android:src="@drawable/bg2"/>
           <RelativeLayout
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:layout_alignParentBottom="true"
               android:layout_marginLeft="16dp"
               android:layout_marginRight="16dp"
               android:layout_marginBottom="8dp"
               android:background="@color/Black12">â€‹
               <TextView
                   android:id="@+id/user_name"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentLeft="true"
                   android:textColor="@color/White100"
                   android:theme="@style/CaptionNewBlack"
                   android:fontFamily="sans-serif-light"
                   android:text="Suraj Baadkar"/>
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true">
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginRight="8dp"
                       android:id="@+id/upvote_count_container">
                       <ImageView
                           android:layout_width="18dp"
                           android:layout_height="18dp"
                           android:layout_gravity="center_vertical"
                           android:alpha="0.87"
                           android:tint="@color/White100"
                           android:src="@drawable/ic_favorite_black_24dp"/>
                       <TextView
                           android:id="@+id/upvote_count"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="@color/White100"
                           android:theme="@style/CaptionNewBlack"
                           android:fontFamily="sans-serif-light"
                           android:layout_gravity="center_vertical"
                           android:text="16"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/comment_button_container">
                       <ImageView
                           android:layout_width="18dp"
                           android:layout_height="18dp"
                           android:layout_gravity="center_vertical"
                           android:alpha="0.87"
                           android:tint="@color/White100"
                           android:src="@drawable/ic_chat_bubble_black_24dp"/>
                       <TextView
                           android:id="@+id/comment_count"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:theme="@style/CaptionNewBlack"
                           android:textColor="@color/White100"
                           android:fontFamily="sans-serif-light"
                           android:layout_gravity="center_vertical"
                           android:text="40"/>
                   </LinearLayout>
               </LinearLayout>
           </RelativeLayout>
       </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Black12"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:padding="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:gravity="center"
                xmlns:android="http://schemas.android.com/apk/res/android">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.54"
                    android:src="@drawable/ic_uber"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:alpha="0.70"
                    android:theme="@style/ButtonBlack"
                    android:fontFamily="sans-serif-light"
                    android:text="UBER"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/trip_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                android:layout_marginRight="8dp"
                android:padding="8dp"
                android:gravity="center" >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.54"
                    android:src="@drawable/ic_navigation_black_24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:alpha="0.70"
                    android:fontFamily="sans-serif-light"
                    android:theme="@style/ButtonBlack"
                    android:text="NAV"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/upvote_button"
                xmlns:android="http://schemas.android.com/apk/res/android">
                <ImageView
                    android:id="@+id/upvote_button_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.54"
                    android:src="@drawable/ic_favorite_black_24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:alpha="0.70"
                    android:theme="@style/ButtonBlack"
                    android:fontFamily="sans-serif-light"
                    android:text="LIKE"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/comment_count_container" >
                <ImageView
                    android:id="@+id/comment_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.54"
                    android:src="@drawable/ic_chat_bubble_black_24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:alpha="0.70"
                    android:theme="@style/ButtonBlack"
                    android:fontFamily="sans-serif-light"
                    android:text="POST"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>