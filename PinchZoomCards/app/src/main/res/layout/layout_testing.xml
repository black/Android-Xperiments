<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/yelp_business_main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/yelp_business_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_add_black_24dp"/>
            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:padding="8dp">
                <TextView
                    android:id="@+id/yelp_business_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="Philz Coffee"
                    android:layout_gravity="top"
                    android:theme="@style/TitleBlack"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/yelp_business_rating_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="8dp"
                        android:text="4.5"
                        android:theme="@style/Body1Black"/>
                    <RatingBar
                        android:id="@+id/yelp_business_rating_bar"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:numStars="5"
                        android:rating="4.5"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_yelp_icon"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/yelp_business_address"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="3101 24th St,Mission,San Francisco, CA 94110"
                    android:theme="@style/SubHeadBlack87"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Black12"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/attribution">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="8dp">
            <LinearLayout
                android:id="@+id/yelp_business_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:padding="8dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="8dp"
                    android:alpha="0.87"
                    android:src="@drawable/ic_location_on_black_24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="MAP"
                    android:theme="@style/ButtonBlack"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/yelp_business_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:padding="8dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:alpha="0.87"
                    android:paddingRight="8dp"
                    android:src="@drawable/ic_call_black_24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="CALL"
                    android:theme="@style/ButtonBlack"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
