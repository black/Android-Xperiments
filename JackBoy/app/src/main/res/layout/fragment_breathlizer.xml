<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="8dp"
    tools:context="com.example.kuro.jackboy.Breathlizer.BreathlizerFragment">

    <RelativeLayout
        android:id="@+id/measurement"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/progressElement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">
            <ProgressBar
                android:id="@+id/progressbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:rotation="135"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:indeterminate="false"
                android:max="134"
                android:progress="50"
                android:padding="16dp"
                android:progressBackgroundTint="#ECF0F1"
                android:progressDrawable="@drawable/circular_progressbar" />
            <ImageView
                android:id="@+id/startBreathlizer"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:onClick="startBreathlizer"
                android:alpha=".54"
                android:src="@drawable/playbutton"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/values_breathlizer"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="80sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#757575"
                android:text="0"/>
        </FrameLayout>
        <LinearLayout
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/progressElement"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:alpha="0.54"
                android:padding="8dp"
                android:src="@drawable/ic_location_on_black_24dp" />

            <TextView
                android:id="@+id/locationaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:padding="8dp"
                android:text=""
                android:textSize="16sp" />
        </LinearLayout>

    </RelativeLayout>

     <LinearLayout
         android:id="@+id/chalan"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:visibility="gone"
         android:orientation="vertical">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginBottom="8dp"
             android:orientation="horizontal">

             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginRight="24dp"
                 android:alpha="0.54"
                 android:gravity="center"
                 android:padding="8dp"
                 android:src="@drawable/ic_person_black_24dp" />

             <EditText
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:hint="Name of the user"
                 android:padding="8dp" />
         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginBottom="8dp"
             android:orientation="horizontal">

             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginRight="24dp"
                 android:alpha="0.54"
                 android:padding="8dp"
                 android:src="@drawable/ic_directions_car_black_24dp" />

             <EditText
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:hint="Vehicle Number "
                 android:padding="8dp" />
         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">

             <Spinner
                 android:id="@+id/spinner"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="56dp"
                 android:spinnerMode="dialog" />
         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginBottom="8dp"
             android:orientation="horizontal">

             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginRight="24dp"
                 android:alpha="0.54"
                 android:padding="8dp"
                 android:src="@drawable/ic_phone_black_24dp" />

             <EditText
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:hint="Phone Number"
                 android:inputType="number"
                 android:padding="8dp" />
         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginBottom="8dp"
             android:orientation="horizontal">

             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginRight="24dp"
                 android:alpha="0.54"
                 android:padding="8dp"
                 android:src="@drawable/ic_email_black_24dp" />

             <EditText
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:hint="Email Id"
                 android:padding="8dp" />
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginBottom="8dp"
             android:orientation="horizontal">

             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginRight="24dp"
                 android:alpha="0.54"
                 android:padding="8dp"
                 android:src="@drawable/ic_location_on_black_24dp" />

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:fontFamily="sans-serif-light"
                 android:padding="8dp"
                 android:text="Sony world signal, Koramangala 4th Block, Bengaluru, Karnataka 560095, India"
                 android:textSize="16sp" />
         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginBottom="8dp"
             android:orientation="horizontal">

             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginRight="24dp"
                 android:alpha="0.54"
                 android:padding="8dp"
                 android:src="@drawable/rupee_symbol" />

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="500"
                 android:fontFamily="sans-serif-light"
                 android:textSize="42sp" />
         </LinearLayout>
         <Button
             android:layout_marginTop="16dp"
             android:id="@+id/send_button"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="right"
             android:text="SEND"
             android:textColor="#fff"
             android:backgroundTint="#3ba139"
             />
     </LinearLayout>

</FrameLayout>
