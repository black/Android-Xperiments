<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">
    <ProgressBar
        android:layout_centerInParent="true"
        android:id="@+id/readProgress"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ProgressBar
        android:layout_centerInParent="true"
        android:id="@+id/writeProgress"
        android:visibility="gone"
        android:progressTint="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/connectStatus"
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STATUS"/>
    <Button
        android:layout_toLeftOf="@+id/stopSensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START"
        android:onClick="startSensor"/>
    <Button
        android:id="@+id/stopSensor"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STOP"
        android:onClick="stopSensor"/>
    <com.jjoe64.graphview.GraphView
        android:layout_below="@+id/connectStatus"
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>
    <ScrollView
        android:id="@+id/container"
        android:layout_below="@id/graph"
        android:layout_above="@+id/button_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/loadedData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:padding="16dp"/>
    </ScrollView>
    <LinearLayout
        android:id="@+id/button_group"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
<!--        <Button-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="SAVE"-->
<!--            android:onClick="saveFile"/>-->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOAD"
            android:onClick="loadFile"/>
        <Button
            android:id="@+id/shareData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Share"
            android:onClick="shareFile" />
    </LinearLayout>
</RelativeLayout>